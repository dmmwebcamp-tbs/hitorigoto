<!-- マイページ -->

<div class="col-xs-6">
	<div class="profile-container">
	<h2 class="profile-name">マイページ</h2>

	<%= form_for(@user) do |f| %>

	<table class="table">
		<tbody>
			<tr>
				<th>店長からの返信</th>
				<th><%= @user.reply %></th>
			</tr>
			<tr>
				<th>名前</th>
				<th><%= @user.last_name %><%= @user.first_name %></th>
			</tr>
			<tr>
				<th>名前（カナ）</th>
				<th><%= @user.last_name_kana %><%= @user.first_name_kana %></th>
			</tr>
			<tr>
				<th>郵便番号</th>
				<th><%= @user.postcode %></th>
			</tr>
			<tr>
				<th>住所</th>
				<th><%= @user.address %></th>
			</tr>
			<tr>
				<th>電話番号</th>
				<th><%= @user.phone_number %></th>
			</tr>
		</tbody>
	</table>

	<% end %>



	<div class="row">
		<% if @user.id == current_user.id %>
		<p><%= link_to "個人情報を編集",edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
		<p><%= link_to "パスワードの再設定・退会",edit_user_registration_path,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
		<p><%= link_to "購入履歴の確認",user_history_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
		<% end %>
	</div>

	</div>


