<%= render 'owners/home' %>
<div class="container">
        <p id="notice"></p>
            <div class="row">

              	<div>
					　  <%= form_tag(users_path, :method => 'get') do %>
              　 <%= text_field_tag :search, params[:search] %>
            　　   <%= submit_tag "名前検索", :name => nil %>
                       <% end %>

				</div>

            </div>

              	<table class= "table table-hover table-inverse table-bordered">
            		<thead>

            		  <tr>
                      <th class ="user-id col-xs-1">ID</th>
              			  <th class ="sign_up_date col-xs-1">登録日</th>
               			  <th class ="user_name col-xs-2">名前</th>
                 		　<th class ="user_number col-xs-2">電話番号</th>
                 		　<th class ="user_mailadress col-xs-3">メールアドレス</th>
                      <th class ="status col-xs-3">詳細・購入履歴</th>
              		　</tr>
          		　  </thead>

           		　　 <tbody>
              		 <% @users.each do |user| %>
               		  <tr class ="user-item">
                   		　 <td class="id"><%= user.id %></td>
                    	 　<td class="date"><%= user.created_at.strftime("%Y-%m-%d") %></td>
						             <td class="name"><%= user.last_name %><%= user.first_name %></td>
						             <td class="number"><%= user.phone_number %></td>
                         <td class="e-mail"><%= user.email %></td>
                         <td class="status">
                            <button type="button" class="btn btn-default"><%= link_to "詳細",  user_path(user.id) %></button>
                            <button type="button" class="btn btn-default"><%= link_to "履歴",
                              all_history_path(user.id) %></button>
                         </td>
                    </tr>
                      <% end %>
           			 </tbody>
      		　  </table>

          <button type="button" class="btn btn-default"><%= link_to "戻る", owners_top_path, class: "back"%></button>



 </div>
