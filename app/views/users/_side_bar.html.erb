
<!-- サイドバー -->
<!-- Home,Index.Show,Cart,Denshobato,Mypage -->
<div class="col-xs-2">
<div class="side-bar">
    <!--1段落目-->
    <h2><ログイン></h2>

    <%=form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!--メールアドレス-->
    <div class="field-1">
        <%= f.label :メールアドレス %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email" %>
    </div>

　　<!--パスワードボックス-->
    <div class="field-2">
    	<%= f.label :パスワード %><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "password" %>
    </div>

    <!--パスをお忘れですか？-->
    <!--view作成のみ？-->
	<%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %>

    <!--ログイン-->
    <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>

    <!--新規登録-->
    <!-- まだリンク先がない？ -->
    <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-info" %>

    <% end %>


    <!--2段落目-->
    <h2><ジャンル></h2>

    <!-- 今後リンク先を貼り付ける -->
    <h4><%= link_to "邦楽", top_path %></h4>
    <h4><%= link_to "洋楽", top_path %></h4>
    <h4><%= link_to "ロック", top_path %></h4>
    <h4><%= link_to "アニメ", top_path %></h4>
    <h4><%= link_to "アイドル", top_path %></h4>
    <h4><%= link_to "ボーカロイド", top_path %></h4>
    <h4><%= link_to "演歌", top_path %></h4>
    <h4><%= link_to "オーケストラ", top_path %></h4>
    <h4><%= link_to "クラシック", top_path %></h4>
    <h4><%= link_to "その他", top_path %></h4>


    <!--3段落目-->
    <!--店長の紹介は消す方向なのか！？-->

</div>
</div>