<!-- ユーザ情報編集ページ -->

<div class="col-xs-6">
	<div class="profile-container">
	<h2 class="profile-name">個人情報編集</h2>

	<%= form_for(@user) do |f| %>

	<table class="table">
		<tbody>
			<tr>
				<th>名前</th>
				<th><%= f.text_field :last_name, autofocus: true, class:"" %><%= f.text_field :first_name, autofocus: true, class:"" %></th>
			</tr>
			<tr>
				<th>名前（カナ）</th>
				<th><%= f.text_field :last_name_kana, autofocus: true, class:"" %><%= f.text_field :first_name_kana, autofocus: true, class:"" %></th>
			</tr>
			<tr>
				<th>郵便番号</th>
				<th><%= f.text_field :postcode, autofocus: true, class:"" %></th>
			</tr>
			<tr>
				<th>住所</th>
				<th><%= f.text_field :address, autofocus: true, class:"" %></th>
			</tr>
			<tr>
				<th>電話番号</th>
				<th><%= f.text_field :phone_number, autofocus: true, class:"" %></th>
			</tr>
		</tbody>
	</table>
	<%= f.submit "個人情報を変更する", class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	<% end %>

</div>
</div>