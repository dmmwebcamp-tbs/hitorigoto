<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

			<div class="col-xs-12">
				<div class="main-visual">
				<div class="row">
					<div class="col-xs-5">
						<div class="harf_field">
						<div class="block__30"></div>
							<h4 class ="New-items">= New arrivals</h4>
							<div class="slider">
							<% @products.last(10).each do |p| %>
							<%= link_to product_path(p), class: "" do %>
								<%= attachment_image_tag p, :image,:fill,150,150, format: 'jpeg', fallback: "no_image.jpg", :size => "200x200" %>
							<% end %>
							<% end %>
						</div>
					</div>
					</div>
					<div class="col-xs-7">
					</div>
				</div>
				</div>

				<%= render 'users/side_bar' %>

				<div class="new-index">
					<h2>新着商品一覧</h2>
					<% @products.last(10).each do |p| %>
					<%= link_to product_path(p), class: "" do %>
							<div class="item_index">
				<table>
					<tbody>
						<tr>
							<td><%= attachment_image_tag p, :image,:fill,200,200, format: 'jpeg', fallback: "no_image.jpg", :size => "200x200" %></td>
						</tr>
						<tr>
							<td><%= p.cd_name %></td>
						</tr>
						<tr>
							<td><%= number_to_yen(p.price) %></td>
						</tr>
					</tbody>
				</table>
							</div>
					<% end %>
					<% end %>
				</div>
			</div>

		</div>
