<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

	<div class="container">
		<div class="row">



<%= render 'users/side_bar' %>


			<div class="col-xs-10">
				<div class="main-visual">
				<div class="row">
					<div class="col-xs-5">
						<h2>	新着商品</h2>
						<div class="slider">
						<% @products.last(8).each do |p| %>
						<%= link_to product_path(p), class: "" do %>
							<%= attachment_image_tag p, :image,:fill,150,150, format: 'jpeg', fallback: "no_image.jpg", :size => "150x150" %>
						<% end %>
						<% end %>
						</div>
					</div>
					<div class="col-xs-7">
					</div>
				</div>
				</div>

				<div class="new-index">
					<h2>新着商品一覧</h2>
					<% @products.last(8).each do |p| %>
					<%= link_to product_path(p), class: "" do %>
							<div class="item_index">
				<table>
					<tbody>
						<tr>
							<td><%= attachment_image_tag p, :image,:fill,200,200, format: 'jpeg', fallback: "no_image.jpg", :size => "200x200" %></td>
						</tr>
						<tr>
							<td><%= p.cd_name %></td>
						</tr>
						<tr>
							<td><%= number_to_yen(p.price) %></td>
						</tr>
					</tbody>
				</table>
							</div>
					<% end %>
					<% end %>
				</div>
			</div>

		</div>
	</div>